{
    "providers": [
        "classpath:${jboss.home.dir}/providers/*"
    ],

    "admin": {
        "realm": "master"
    },

    "eventsStore": {
        "provider": "jpa",
        "jpa": {
            "exclude-events": [ "REFRESH_TOKEN" ]
        }
    },

    "eventsListener": {
        "mc-event-listener" : {
            "server-root": "https://localhost",
            "keystore-path": "/mc-eventprovider-conf/idbroker-updater.jks",
            "keystore-password": "changeit",
            "truststore-path": "/mc-eventprovider-conf/mc-truststore.jks",
            "truststore-password": "changeit",
            "idp-not-to-sync": [ "certificate" ]
        }
    },

    "authenticator": {
        "certificate" : {
            "truststore-path": "/mc-eventprovider-conf/mc-truststore.jks",
            "truststore-password": "changeit"
        }
    },
    "realm": {
        "provider": "jpa"
    },

    "user": {
        "provider": "jpa"
    },

    "userCache": {
        "default" : {
            "enabled": true
        }
    },

    "userSessionPersister": {
        "provider": "jpa"
    },

    "timer": {
        "provider": "basic"
    },

    "theme": {
        "staticMaxAge": 2592000,
        "cacheTemplates": true,
        "cacheThemes": true,
        "folder": {
          "dir": "${jboss.home.dir}/themes"
        }
    },

    "scheduled": {
        "interval": 900
    },

    "connectionsHttpClient": {
        "default": {}
    },

    "connectionsJpa": {
        "default": {
            "dataSource": "java:jboss/datasources/KeycloakDS",
            "databaseSchema": "update"
        }
    },

    "realmCache": {
        "provider": "default",
        "default" : {
            "enabled": true
        }
    },

    "connectionsInfinispan": {
        "provider": "default",
        "default": {
            "cacheContainer" : "java:comp/env/infinispan/Keycloak"
        }
    }
}
